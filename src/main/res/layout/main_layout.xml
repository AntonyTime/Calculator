<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/display"
            android:background="#ff64d3ff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:text="0" android:gravity="bottom|right"
            android:textIsSelectable="false" android:textSize="25sp" android:editable="false" android:inputType="none"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="5"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gridLayout2" android:layout_below="@+id/display">

        <Button android:text="1"
                android:background="#ff95ff5f"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn1" android:onClick="onClick"/>

        <Button android:text="2"
                android:background="#ff95ff5f"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn2" android:onClick="onClick"/>
        <Button android:text="3"
                android:background="#ff95ff5f"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn3" android:onClick="onClick"/>
        <Button android:text="4"
                android:background="#ff95ff5f"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn4" android:onClick="onClick"/>
        <Button android:text="5"
                android:background="#ff95ff5f"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn5" android:onClick="onClick"/>
        <Button android:text="6"
                android:background="#ff95ff5f"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn6" android:onClick="onClick"/>
        <Button android:text="7"
                android:background="#ff95ff5f"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn7" android:onClick="onClick"/>
        <Button android:text="8"
                android:background="#ff95ff5f"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn8" android:onClick="onClick"/>
        <Button android:text="9"
                android:background="#ff95ff5f"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_width="90dp"
                android:layout_height="92dp" android:textSize="25sp"
                android:id="@+id/btn9" android:onClick="onClick"/>
        <Button android:text="."
                android:background="#ffffa734"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:textSize="25sp" android:id="@+id/btnDot"
                android:onClick="onClick"/>
        <Button android:text="0"
                android:background="#ffffa734"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:textSize="25sp" android:id="@+id/btn0"
                android:onClick="onClick"/>
        <Button android:text="="
                android:background="#ffffa734"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:textSize="25sp" android:id="@+id/btnEqual"
                android:onClick="onClick"/>
    </GridLayout>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="5"
            android:layout_toRightOf="@+id/gridLayout2"
            android:layout_toEndOf="@+id/gridLayout2"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_below="@+id/display">

        <Button android:text="C"
                android:background="#ffff3d3d"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="25sp" android:layout_gravity="top|left|bottom|right" android:id="@+id/btnC"
                android:onClick="onClick"/>
        <Button android:text="/"
                android:background="#ffff3d3d"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="25sp" android:layout_gravity="top|left|bottom|right" android:id="@+id/btnDiv"
                android:onClick="onClick"/>
        <Button android:text="*"
                android:background="#ffff3d3d"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="25sp" android:layout_gravity="top|left|bottom|right" android:id="@+id/btnMul"
                android:onClick="onClick"/>
        <Button android:text="-"
                android:background="#ffff3d3d"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="25sp" android:layout_gravity="top|left|bottom|right" android:id="@+id/btnMinus"
                android:onClick="onClick"/>
        <Button android:text="+"
                android:background="#ffff3d3d"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="25sp" android:layout_gravity="top|left|bottom|right" android:id="@+id/btnPlus"
                android:onClick="onClick"/>





    </GridLayout>


</RelativeLayout>