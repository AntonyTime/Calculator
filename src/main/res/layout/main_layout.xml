<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/display"
            android:layout_row="0"
            android:layout_column="0" android:layout_columnSpan="4" android:background="#ff64d3ff"
            android:textSize="30dp" android:gravity="bottom|right" android:editable="false"
            android:windowSoftInputMode="stateHidden"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/display"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:id="@+id/gridLayout">
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="7"
                android:id="@+id/btn7" android:layout_row="1" android:layout_column="0" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="8"
                android:id="@+id/btn8" android:layout_row="1" android:layout_column="1" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="9"
                android:id="@+id/btn9" android:layout_row="1" android:layout_column="2" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="4"
                android:id="@+id/btn4" android:layout_row="3" android:layout_column="0" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="5"
                android:id="@+id/btn5" android:layout_row="3" android:layout_column="1" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="6"
                android:id="@+id/btn6" android:layout_row="3" android:layout_column="2" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="1"
                android:id="@+id/btn1" android:layout_row="4" android:layout_column="0" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="3"
                android:id="@+id/btn3" android:layout_row="4" android:layout_column="2" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="2"
                android:id="@+id/btn2" android:layout_row="4" android:layout_column="1" android:onClick="onClick"
                android:background="#ff99ff97" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="."
                android:id="@+id/btnComma" android:layout_row="5" android:layout_column="0" android:onClick="onClick"
                android:background="#fff9fda0" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="0"
                android:id="@+id/btn0" android:layout_row="5" android:layout_column="1" android:onClick="onClick"
                android:background="#fff9fda0" android:textSize="30dp"
                android:layout_rowWeight="1"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="102dp"
                android:text="="
                android:id="@+id/btnEqual" android:layout_row="5" android:layout_column="2" android:onClick="onClick"
                android:background="#fffbffa1" android:textSize="30dp"
                android:layout_rowWeight="1"/>

    </GridLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/display"
            android:layout_toRightOf="@+id/gridLayout" android:layout_toEndOf="@+id/gridLayout">
        <Button
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="C"
                android:id="@+id/btnC" android:layout_row="1" android:layout_column="4" android:onClick="onClick"
                android:layout_weight="3.53" android:background="#ffef9667" android:textSize="30dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnDivide" android:layout_row="2" android:layout_column="4" android:onClick="onClick"
                android:layout_weight="1" android:background="#ffef9667" android:textSize="30dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/btnMultiply" android:layout_row="3" android:layout_column="4" android:onClick="onClick"
                android:layout_weight="1" android:background="#ffef9667" android:textSize="30dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnSubtract" android:layout_row="4" android:layout_column="4" android:onClick="onClick"
                android:layout_weight="1" android:background="#ffef9667" android:textSize="30dp"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="+"
                android:id="@+id/btnPlus" android:layout_row="5" android:layout_column="4" android:onClick="onClick"
                android:background="#ffef9667" android:layout_weight="0.07" android:textSize="30dp"/>

    </TableLayout>


</RelativeLayout>